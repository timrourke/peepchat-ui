{{#x-card
  onsubmit=attrs.onsubmit
  title='Register with Peepchat'
  buttonText='Register'
  buttonDisabled=validations.messages.length}}
  <div class="row">
    {{x-input
      value=model.email
      errors=(v-get this 'model.email' 'messages')
      classNames='col s12'
      type='email'
      label='Username'}}
  </div>
  <div class="row">
    {{x-input
      value=model.password
      errors=(v-get this 'model.password' 'messages')
      classNames='col s12'
      type='password'
      label='Password'}}
  </div>
  <div class="row">
    {{x-input
      value=model.passwordConfirmation
      errors=(v-get this 'model.passwordConfirmation' 'messages')
      classNames='col s12'
      type='password'
      label='Confirm Password'}}
  </div>
{{/x-card}}
