<div class="card-content">
	{{#if title}}
		<span class="card-title">{{title}}</span>
		{{yield}}
	{{/if}}
</div>
{{#if attrs.onsubmit}}
	<div class="card-action right-align">
		{{md-btn 
			disabled=buttonDisabled
			class=buttonClass
			action=attrs.onsubmit
			text=buttonText
		}}
	</div>
{{/if}}